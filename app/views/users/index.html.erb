<h1>Users</h1>

<p>
  <%= link_to "new", new_user_url %>
</p>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Born on</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.id %>
        </td>
        <td>
          <%= link_to user.email, user_url(user) %>
        </td>
        <td>
          <%= user.born_on.to_formatted_s(:long) if user.born_on %>
        </td>
        <td>
          <%= link_to "edit", edit_user_url(user) %> |
          <%= link_to "delete", user_url(user), method: :delete, confirm: "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</ol>